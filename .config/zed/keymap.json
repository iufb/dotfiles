[
  {
    "context": "Workspace",
    "bindings": {
      "; f": "file_finder::Toggle",
      "ctrl-p": null
    }
  },
  {
    "context": "vim_mode==normal",
    "bindings": {
      "Tab": "pane::ActivateNextItem",
      "Shift-Tab": "pane::ActivatePreviousItem",
      "Alt-t": "terminal_panel::ToggleFocus",
      "s f": "project_panel::ToggleFocus",
      "d w": ["workspace::SendKeystrokes", "v a w c"],
      "s v": "pane::SplitLeft",
      "s l": "workspace::ActivatePaneRight",
      "s h": "workspace::ActivatePaneLeft"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "s f": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "Alt-t": "workspace::ToggleBottomDock",
      "Alt-l": "pane::ActivateNextItem",
      "Alt-h": "pane::ActivatePreviousItem",
      "Alt-o": "workspace::NewTerminal"
    }
  }
]
